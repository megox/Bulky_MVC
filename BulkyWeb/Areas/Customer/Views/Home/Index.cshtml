@model IEnumerable<Product>


<style>
    .card {
        transition: transform 0.3s ease-in-out; /* Smooth transition */
    }

    .card:hover {
        transform: scale(1.1); /* Makes the card bigger */
    }

    .img-fixed {
        height: 250px;
        object-fit: fill; /* Ensures the image scales correctly */
    }

    .title-fit{
      height : 50px;
    }
</style>




<div class="container mt-5">

    <br />
    <br />

    <div class="row pb-5 mb-5">

        @foreach(var card in Model){
          
            <div class="col-6 col-md-4 col-lg-3 mb-3 mt-3 ">
               
                        <div class="card shadow rounded-2 border-0">
                            <img src="@card.ImageUrl" class="card-img-top img-fixed" alt="...">
                            <div class="card-body text-center">
                                

                                    <div class="row title-fit">
                                            <h5 class="card-title">@card.Title</h5>
                                    </div>

                                     <div class="row">
                                         <p class="card-text text-decoration-line-through mb-0 text-danger">@card.Price $</p>
                                    </div>

                                    <div class="row">
                                             <p class="card-text">@card.Price100$</p>
                                    </div>

                                    <div class="row">
                                        <p class="card-text">by <span style="color:burlywood">@card.Author</span></p>

                                    </div>

                                    <a asp-action="Details" asp-route-id="@card.Id" class="btn btn-primary mt-2">Details</a>
                                
                            </div>
                        </div> 
            </div>
        }
       



    </div>
    


</div>


