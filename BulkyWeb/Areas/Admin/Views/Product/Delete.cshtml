@model Product

<div class="card shadow border-0 mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">

            <div class="border p-3">
             
                <div asp-validation-summary="All"></div>

                <div class="mb-3">

                    <label asp-for="Title" class="h5"></label>
                    <input asp-for="Title" disabled class="border form-control" />
                </div>

                <div class=" mb-2">
                    <label asp-for="ISBN" class="h5"></label>
                    <input asp-for="ISBN" disabled class=" border form-control" />

                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondery form-control border">Back To List</a>
                    </div>
                </div>




            </div>


        </form>

    </div>

</div>


