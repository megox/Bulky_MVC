@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel


<form method="post">

    <div class="border p-3 mt-4">
        <div class="mb-2">
            <h2 class=""> DELETE CATEGORY</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">

            <label asp-for="category.Name" class="h5"></label>
            <input asp-for="category.Name" disabled class="border form-control" />
        </div>

        <div class=" mb-2">
            <label asp-for="category.DisplayOrder" class="h5"></label>
            <input asp-for="category.DisplayOrder" disabled class=" border form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondery form-control border">Back To List</a>
            </div>
        </div>


    </div>


</form>
